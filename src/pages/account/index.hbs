</section>

<section class="section-tab">

  <div class="tabs">
    <div class="tabs__nav-btn igra igra-20 active" data-tab="#tab-all"> Избранное</div>
    <div class="tabs__nav-btn igra igra-20" data-tab="#tab-banquet"> История заказов</div>
    <img class="tabs__line" src="@assets/icon/icon-line-tab.svg" alt="">
  </div>

  <div id="tab-all" class="block-card active">
    <ul class="people_list row">
      {{#each cards-favourites}}
      <div class="
    col-xs-12
    col-sm-6
    col-md-4
    col-lg-3">
        {{> ../../components/card.hbs}}
      </div>
      {{/each}}
    </ul>
  </div>

  <div id="tab-banquet" class="block-card">
    <ul class="people_list row">
      {{#each cards-order-history}}
      <div class="
       col-xs-12
        col-sm-6
       col-md-4
       col-lg-3">
        {{> ../../components/card.hbs}}
      </div>
      {{/each}}
    </ul>
  </div>

</section>

