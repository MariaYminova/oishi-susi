<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Document</title>
</head>

<body>
  <style>
    .hbs-title {
      font-size: 24px;
      font-weight: bold;
      margin-bottom: 30px;
      margin: 0 auto;
      max-width: 200px;
      color: rgb(39, 39, 203);
      text-align: center
    }

    .hbs-page-list {
      padding: 30px 0 20px 0px;
      margin: 0 auto;
      max-width: 200px;
      margin-bottom: 20px;
      counter-reset: linksCounter;
    }

    li {
      font-size: 18px;
      margin-bottom: 15px;
      border: 2px solid rgb(140, 140, 202);
      padding: 10px 20px;
      border-radius: 5px;
      counter-increment: linksCounter;
    }

    li::before {
      content: counter(linksCounter) ".";
    }
  </style>
    <div class="hbs-title">
      Page lists
    </div>
 
  <ul class="hbs-page-list">
    {{#each pages}}
    <li>
      <a href="/{{this}}">{{this}}</a>
    </li>
    {{/each}}
  </ul>
</body>
</html>